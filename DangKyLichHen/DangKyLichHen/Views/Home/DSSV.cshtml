<script>
    var DSSV;
    var Selected_ID;
    function khoitao() {
    }
    $(document).ready(function () {
        SinhVien_load_list();
    });
    function SinhVien_load_list() {
        $.ajax({
            type: "GET",
            url: "/Home/SinhVien_load_list",
            dataType: "json",
            success: function (dt) {
                for (var i = 0; i < dt.length; i++) {
                    dt[i].Ngay_sinh = dt[i].Ngay_sinh.substring(0, 10);
                }
                DSSV = dt;
                document.getElementById("maintable").innerHTML = "";
                filldata('maintable', dt);
            }
        });
    }
    function filldata(table_id, data) {
        var dataSet = new Array;

        $.each(data,
            function (index, value) {
                var tempArray = new Array;
                for (var o in value) {
                    tempArray.push(value[o]);
                }
                dataSet.push(tempArray);
            });

        table = $('#' + table_id + '').DataTable({
            'select': true,
            "destroy": true,
            data: dataSet,
            "oLanguage": {

                "sProcessing": "Đang xử lý...",
                "sLengthMenu": "Xem _MENU_ mục",
                "sZeroRecords": "Không có dữ liệu!",
                "sInfo": "Đang xem _START_ đến _END_ trong tổng số _TOTAL_ mục",
                "sInfoEmpty": "Đang xem 0 đến 0 trong tổng số 0 mục",
                "sInfoFiltered": "(được lọc từ _MAX_ mục)",
                "sInfoPostFix": "",
                "sSearch": "Tìm kiếm nhanh:",
                "sUrl": "",
                "oPaginate": {
                    "sFirst": "Đầu",
                    "sPrevious": "Trước",
                    "sNext": "Tiếp",
                    "sLast": "Cuối"

                }
            },
            columns: [
                { title: "ID", "visible": false },
                { title: "Mã sinh viên" },
                { title: "Tên sinh viên" },
                { title: "CMND" },
                { title: "SĐT" },
                { title: "Email" },
                { title: "Ngày sinh" },
                { title: "Giới tính" },
                { title: "Active" },
                { title: "UserName" },
                { title: "PassWord" },
                { title: "Thao tác" }
            ],
            "columnDefs": [{
                "targets": -1,
                "width": "8%",
                "data": null,
                "defaultContent":
                    "<a id=" + "suact" + " data-toggle=" + "modal" + " data-target=" + "#capnhat" + " >" + " <i class= " + "'fas fa-edit'" + " ></i>" + "<span> &ensp;</span></a>"
                    + "<a id=" + "xoact" + " >" + " <i class= " + "'fas fa-trash-alt'" + " ></i> " + "</a> "

            }],
            "order": [[0, "asc"]]
        });
        $('#' + table_id + ' tbody').on('click', '#suact', function () {
            var data = table.row($(this).parents('tr')).data();
            $('#Ma_sinh_vien_u').val(data[1]);
            $('#Ten_sinh_vien_u').val(data[2]);
            $('#CMND_u').val(data[3]);
            $('#SDT_u').val(data[4]);
            $('#Email_u').val(data[5]);
            $('#Ngay_sinh_u').val(data[6].split("/").reverse().join("-"));
            $('#Gioi_tinh_u').val(data[7]);
            if (data[8] == "1") {
                $("#Active_u").prop('checked', true);
            }
            $('#UserName_u').val(data[9]);
            $('#PassWord_u').val(data[10]);
            Selected_ID = data[0];
        });
        $('#' + table_id + ' tbody').on('click', '#xoact', function () {
            var data = table.row($(this).parents('tr')).data();
            Selected_ID = data[0];
            if (confirm("Bạn có muốn xóa ?")) {
                Delete();
            }
        });
    };
    function Update() {
        Ma_sinh_vien = $('#Ma_sinh_vien_u').val();
        Ten_sinh_vien = $('#Ten_sinh_vien_u').val();
        CMND = $('#CMND_u').val();
        SDT = $('#SDT_u').val();
        Email = $('#Email_u').val();
        Ngay_sinh = $('#Ngay_sinh_u').val();
        Gioi_tinh = $('#Gioi_tinh_u').val();
        UserName = $('#UserName_u').val();
        PassWord = $('#PassWord_u').val();
        var act = $("#Active_u").is(":checked");
        var check;
        debugger
        if (act == true) { check = "1" } else { check = "0" }
        if ($('#Ma_sinh_vien_u').val() == "" || $('#Ten_sinh_vien_u').val() == "") {
            alert("Mã và tên sinh viên không được để trống")
        } else {
            var data = new FormData();
            data.append("ID", Selected_ID);
            data.append("Ma_sv", Ma_sinh_vien);
            data.append("Ten_sv", Ten_sinh_vien);
            data.append("CMND", CMND);
            data.append("SĐT", SDT);
            data.append("Email", Email);
            data.append("Ngay_sinh", Ngay_sinh);
            data.append("Gioi_tinh", Gioi_tinh);
            data.append("Active", check);
            data.append("UserName", UserName);
            data.append("PassWord", PassWord);
            $.ajax({
                type: "POST",
                url: "/Home/Sinhvien_update",
                dataType: "json",
                contentType: false,
                processData: false,
                data: data,
                success: function (dt) {
                    SinhVien_load_list();
                    alert(dt);
                    $('#Ma_sinh_vien_u').val('');
                    $('#Ten_sinh_vien_u').val('');
                    $('#CMND_u').val('');
                    $('#SDT_u').val('');
                    $('#Email_u').val('');
                    $('#Ngay_sinh_u').val('');
                    $('#Gioi_tinh_u').val('');
                    $("#Active_u").prop('checked', false);
                    $('#UserName_u').val('');
                    $('#PassWord_u').val('');
                    $('#capnhat').modal('hide');
                },
                complete: function (data) {

                },
                error: function (err) {
                }
            });
        }
    }
    function clear() {
        $('#Ma_sinh_vien_a').val('');
        $('#Ten_sinh_vien_a').val('');
        $('#CMND_a').val('');
        $('#SDT_a').val('');
        $('#Email_a').val('');
        $('#Ngay_sinh_a').val('');
        $('#Gioi_tinh_a').val('');
        $("#Active_a").prop('checked', false);
        $('#UserName_a').val('');
        $('#PassWord_a').val('');
    }
    function Insert() {
        Ma_sinh_vien = $('#Ma_sinh_vien_a').val();
        Ten_sinh_vien = $('#Ten_sinh_vien_a').val();
        CMND = $('#CMND_a').val();
        SDT = $('#SDT_a').val();
        Email = $('#Email_a').val();
        Ngay_sinh = $('#Ngay_sinh_a').val();
        Gioi_tinh = $('#Gioi_tinh_a').val();
        UserName = $('#UserName_a').val();
        PassWord = $('#PassWord_a').val();
        var act = $("#Active_a").is(":checked");
        var check;
        if (act == true) { check = "1" } else { check = "0" }
        if (Ma_sinh_vien == "" || Ten_sinh_vien == "") {
            alert("Mã và tên sinh viên không được để trống")
        } else {
            var data = new FormData();
            data.append("ID", Selected_ID);
            data.append("Ma_sv", Ma_sinh_vien);
            data.append("Ten_sv", Ten_sinh_vien);
            data.append("CMND", CMND);
            data.append("SĐT", SDT);
            data.append("Email", Email);
            data.append("Ngay_sinh", Ngay_sinh);
            data.append("Gioi_tinh", Gioi_tinh);
            data.append("Active", check);
            data.append("UserName", UserName);
            data.append("PassWord", PassWord);
            $.ajax({
                type: "POST",
                url: "/Home/Sinhvien_insert",
                dataType: "json",
                contentType: false,
                processData: false,
                data: data,
                success: function (dt) {
                    SinhVien_load_list();
                    alert(dt);
                    clear();
                    $('#addnews').modal('hide');
                },
                complete: function (data) {

                },
                error: function (err) {
                }
            });

        }
    }
    function Delete() {
        $.ajax({
            type: "POST",
            url: "/Home/Sinhvien_delete",
            dataType: "json",
            data: {
                "ID": Selected_ID
            },
            success: function (dt) {
                SinhVien_load_list();
                alert(dt);
            },
            complete: function (data) {

            },
            error: function (err) {
            }
        });
    }
</script>